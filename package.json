{
  "name": "guildmaster",
  "version": "0.1.0",
  "description": "A CMS dedicated to build job platforms",
  "author": "Jumpei Ogawa (https://phanective.org)",
  "license": "UNLICENSED",
  "private": true,
  "type": "module",
  "workspaces": [
    "modules/*"
  ],
  "scripts": {
    "dev": "lerna run dev --parallel",
    "build": "lerna run build --parallel",
    "test": "lerna run test --parallel",
    "check": "tsc --noEmit && biome check && lerna run check --parallel",
    "fix": "biome check --write && lerna run fix --parallel"
  },
  "devDependencies": {
    "@astrojs/ts-plugin": "^1.10.1",
    "@biomejs/biome": "1.8.3",
    "@lerna-lite/cli": "^3.7.1",
    "@lerna-lite/run": "^3.7.1",
    "@phanect/configs": "latest",
    "typescript": "^5.5.3"
  },
  "engines": {
    "node": "22.x",
    "npm": ">=10"
  }
}
