---
import { Image as AstroImage } from "astro:assets";
import type { ComponentProps } from "astro/types";

type AstroImageProps = ComponentProps<typeof AstroImage>;

export type Props = Omit<AstroImageProps, "decoding" | "referrerpolicy"> & {
  layout?: "fixed" | "constrained" | "fullWidth" | "cover" | "responsive" | "contained";
  aspectRatio?: string | number;
};

const { layout, aspectRatio, ...givenAttributes } = Astro.props;

const attributes = {
  ...givenAttributes,

  referrerpolicy: "no-referrer",
  decoding: "async",
  alt: "tetete", // TODO
} as AstroImageProps;
---

<AstroImage {...attributes} />
